<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_law_detail.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/peakpx"
    tools:context=".LawDetailActivity">


    <ImageView
        android:id="@+id/lawImageDetail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="110dp"
        android:scaleType="centerCrop"
        android:background="#ffffff"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lawTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="25sp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/lawImageDetail" />

    <TextView
        android:id="@+id/lawDescriptionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        android:background="#ffffff"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lawTitleDetail" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traffic Violation Laws"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lawImageDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
